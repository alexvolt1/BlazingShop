@page "/parentcomponent"
<h1 class="text-danger">Parent Child Component</h1>

<BlazingShop.Pages.Components.ChidComponent OnClickMethod="@ShowMessage" Title="this title is passed as parameters from Parent">

    This Content is displayed between the child component tag inside parent component.
</BlazingShop.Pages.Components.ChidComponent>

<p><b>@messageText</b></p>

@code {
    private string messageText;
    private void ShowMessage(MouseEventArgs e)
    {
        messageText = "Blazing text from Parent!";
    }
}
